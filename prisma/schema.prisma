datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Cat {
  id          Int      @id @default(autoincrement())
  name        String
  image      String
  description   String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model AdoptionForm {
  id          Int      @id @default(autoincrement())
  catId       Int     
  fullname    String
  email       String
  telephone   String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
